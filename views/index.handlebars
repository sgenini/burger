<div class="container">
  <div class="jumbotron mt-3 mb-1 text-center drop-shadow">
    <h1 style="font-family: 'Lato', sans-serif">Eat-Da-Burger<br><i class="fas fa-utensils"></i></h1>
  </div>

  
<div class="container text-center">
  <div class="row mx-auto">
    <div class="col-lg-8 mx-auto">
      <div class="card card-default drop-shadow">
        <div class="card-header">
          <h2 class="text-center" style="font-family: 'Lato', sans-serif">Add a Burger</h2>
        </div>
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="ca" style="font-family: 'Lato', sans-serif">Burger Name:</label><br>
              <input type="text" style="width: 60%" id="ca" name="burger_name">
            </div>
            <button type="submit" style="font-family: 'Lato', sans-serif">Add Burger!</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


  <div class="row">
    <div class="col-lg-6">
      <div class="card card-default drop-shadow">
        <div class="card-header">
          <h2 class="text-center" style="font-family: 'Lato', sans-serif">Burgers Not Yet Devoured!</h2>
        </div>
        <div class="card-body">
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=1}}
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card card-default drop-shadow">
        <div class="card-header">
          <h2 class="text-center" style="font-family: 'Lato', sans-serif">Burgers That You've Eaten!</h2>
        </div>
        <div class="card-body">
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=0}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
    </div>
  </div>
</div>


  <!-- Start Row -->
  <div class="row">
      <div class="col-lg-4 mx-auto">
          <div class="card card-default drop-shadow mb-3">
              <div class="card-body text-center">
                  <div class="container">
                      <h6 style="font-family: 'Lato', sans-serif"><a href="/api/burgers">API Burger List</a> | <a href="https://github.com/sgenini/burger">GitHub Repo</a></h6>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- End Row -->
